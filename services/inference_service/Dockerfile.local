FROM python:3.10-slim

WORKDIR /app

COPY ./ ./

RUN pip install --no-cache-dir -r ./inference_requirements.txt

ENV PYTHONPATH "${PYTHONPATH}:/app/"

EXPOSE 443
# Cloud run requires it
EXPOSE 8080

ENV GRPC_PORT=443
# ENV GRPC_VERBOSITY=debug

CMD ["python", "-u", "./server/inference_service_server.py"]